        @text="Menu"
        @hasChevron={{false}}
      />
      <dd.Interactive @icon="edit" @text="Edit" />
    </L.ActionDropdown>
  </Cut::ListItem>
  <Cut::ListItem as |L|>
    <L.Content>Service c</L.Content>
  </Cut::ListItem>
</div>
