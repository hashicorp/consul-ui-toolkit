  export default class FilterBarController extends Controller {
  @tracked filters = {
    search: {
      value: '',
    },
    filters: {
      status: [
        { text: 'Running', value: 'running' },
        { text: 'Warning', value: 'warning' },
      ],
      type: {
        text: 'Nomad',
        value: 'nomad',
      },
    },
    sort: {
      text: 'critical to healthy',
      value: 'health',
    },
  };

  @tracked count = 0;

  @action
  handleFilterChange(config) {
    this.filters = config;
  }
}
  "}}}
