{{#if (and (and @clusterId @partition) @namespace)}}
<div class="cut-service-cluster-path" data-test-service-cluster-path>
  <span class="hds-link-inline__icon hds-link-inline__icon--leading">
    <Hds::Icon @name="server-cluster" @size="16" @stretched={{true}} />
  </span>
  {{@clusterId}}

  <span
    class="hds-link-inline__icon hds-link-inline__icon--leading cluster-path-separator"
  >
    <Hds::Icon @name="chevron-right" @size="16" @stretched={{true}} />
  </span>

  <span class="hds-link-inline__icon hds-link-inline__icon--leading">
    <Hds::Icon @name="users" @size="16" @stretched={{true}} />
  </span>
  {{@partition}}

  <span
    class="hds-link-inline__icon hds-link-inline__icon--leading cluster-path-separator"
  >
    <Hds::Icon @name="chevron-right" @size="16" @stretched={{true}} />
  </span>

  <span class="hds-link-inline__icon hds-link-inline__icon--leading">
    <Hds::Icon @name="folder-users" @size="16" @stretched={{true}} />
  </span>
  {{@namespace}}
</div>
{{/if}}