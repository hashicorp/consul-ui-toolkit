{{#let @checkmark as |Checkmark|}}
  <Checkmark
    @selected={{this.isSelected}}
    {{on 'click' (fn @onSortChange @value @name)}}
    ...attributes
  >
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{@name}}
    {{/if}}
  </Checkmark>
{{/let}}