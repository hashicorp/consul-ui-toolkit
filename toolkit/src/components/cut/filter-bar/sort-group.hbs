<Hds::SegmentedGroup class='cut-filter-bar-sort-group' ...attributes as |Group|>
  {{yield
    (hash
      Filter=(component
        'cut/filter-bar/filter'
        dropdown=Group.Dropdown
        toggle=@toggle
        softToggle=@softToggle
        applyFilter=@applyFilter
        clearPendingFilter=@clearPendingFilter
        isChecked=@isChecked
        config=@config
        localConfig=@localConfig
      )
      Sort=(component
        'cut/filter-bar/sort'
        dropdown=Group.Dropdown
        onSortChange=@onSortChange
        config=@localConfig
      )
    )
  }}
</Hds::SegmentedGroup>