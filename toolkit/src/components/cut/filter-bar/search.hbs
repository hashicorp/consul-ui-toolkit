{{#if @group}}
  {{#let @group as |SG|}}
    <SG.TextInput
      @type='search'
      @value={{@search}}
      @width={{@width}}
      @isInvalid={{@isInvalid}}
      @isLoading={{@isLoading}}
      placeholder='Search'
      aria-label='Search'
      {{on 'keyup' @onSearchKeyup}}
      {{on 'input' @onSearchInput}}
      ...attributes
    />
  {{/let}}
{{else}}
  <Hds::Form::TextInput::Base
    @type='search'
    @value={{@search}}
    @width={{or @width '196px'}}
    @isInvalid={{@isInvalid}}
    @isLoading={{@isLoading}}
    placeholder='Search'
    aria-label='Search'
    class='cut-filter-bar-search'
    {{on 'keyup' @onSearchKeyup}}
    {{on 'input' @onSearchInput}}
    ...attributes
  />
{{/if}}