{{#if @dropdown}}
  {{#let @dropdown this.filterCount as |Dropdown filterCount|}}
    <Dropdown
      @listPosition={{if @listPosition @listPosition 'bottom-right'}}
      ...attributes
      as |DD|
    >
      {{yield
        (hash
          ToggleButton=(component
            DD.ToggleButton color='secondary' count=filterCount
          )
          Checkbox=(component
            'cut/filter-bar/filter/checkbox'
            checkbox=DD.Checkbox
            filterName=@name
            toggle=this.toggle
            applyFilter=@applyFilter
            isChecked=@isChecked
            isMultiSelect=@isMultiSelect
          )
          Checkmark=(component
            'cut/filter-bar/filter/checkmark'
            checkmark=DD.Checkmark
            filterName=@name
            toggle=this.toggle
            applyFilter=@applyFilter
            isChecked=@isChecked
            isMultiSelect=@isMultiSelect
          )
          Radio=(component
            'cut/filter-bar/filter/radio'
            radio=DD.Radio
            filterName=@name
            toggle=this.toggle
            applyFilter=@applyFilter
            isChecked=@isChecked
            isMultiSelect=@isMultiSelect
          )
          Generic=(component
            'cut/filter-bar/filter/generic'
            generic=DD.Generic
            toggle=this.toggle
            applyFilter=@applyFilter
            config=@config
            localConfig=@localConfig
          )
          CopyItem=DD.CopyItem
          Description=DD.Description
          Interactive=DD.Interactive
          Separator=DD.Separator
          Title=DD.Title
        )
      }}
      {{#if @batch}}
        <DD.Separator />
        <DD.Generic class='cut-filter-bar-apply-filter-button'>
          <Hds::Button
            @type='button'
            @text='Apply'
            @color='primary'
            @isFullWidth={{true}}
            {{on 'click' (fn @applyFilter @name)}}
          />
        </DD.Generic>
      {{/if}}
    </Dropdown>
  {{/let}}
{{else}}
  <Hds::Dropdown
    @listPosition={{if @listPosition @listPosition 'bottom-right'}}
    ...attributes
    as |DD|
  >
    {{yield
      (hash
        ToggleButton=(component DD.ToggleButton color='secondary')
        Checkbox=(component
          'cut/filter-bar/filter/checkbox'
          checkbox=DD.Checkbox
          filterName=@name
          toggle=this.toggle
          applyFilter=@applyFilter
          isChecked=@isChecked
        )
        Checkmark=(component
          'cut/filter-bar/filter/checkmark'
          checkmark=DD.Checkmark
          filterName=@name
          toggle=this.toggle
          applyFilter=@applyFilter
          isChecked=@isChecked
        )
        Radio=(component
          'cut/filter-bar/filter/radio'
          radio=DD.Radio
          filterName=@name
          toggle=this.toggle
          applyFilter=@applyFilter
          isChecked=@isChecked
          isMultiSelect=@isMultiSelect
        )
        Generic=(component
          'cut/filter-bar/filter/generic'
          generic=DD.Generic
          toggle=this.toggle
          applyFilter=@applyFilter
          config=@config
          localConfig=@localConfig
        )
        CopyItem=DD.CopyItem
        Description=DD.Description
        Interactive=DD.Interactive
        Separator=DD.Separator
        Title=DD.Title
      )
    }}

    {{#if @batch}}
      <DD.Separator />
      <DD.Generic class='cut-filter-bar-apply-filter-button'>
        <Hds::Button
          @type='button'
          @text='Apply'
          @color='primary'
          @isFullWidth={{true}}
          {{on 'click' (fn @applyFilter @name)}}
        />
      </DD.Generic>
    {{/if}}
  </Hds::Dropdown>
{{/if}}