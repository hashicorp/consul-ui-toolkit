{{#if @dropdown}}
  {{#let @dropdown this.filterCount as |Dropdown filterCount|}}
    <Dropdown
      @listPosition={{if @listPosition @listPosition 'bottom-right'}}
      ...attributes
      as |DD|
    >
      {{yield
        (hash
          ToggleButton=(component
            DD.ToggleButton color='secondary' count=filterCount
          )
          Checkbox=(component
            'cut/filter-bar/filter/checkbox'
            checkbox=DD.Checkbox
            filters=@filters
            name=@name
            toggle=@toggle
            softToggle=@softToggle
            applyFilter=@applyFilter
            isChecked=@isChecked
            isMultiSelect=@isMultiSelect
          )
          Checkmark=(component
            'cut/filter-bar/filter/checkmark'
            checkmark=DD.Checkmark
            filters=@filters
            name=@name
            toggle=@toggle
            softToggle=@softToggle
            applyFilter=@applyFilter
            isChecked=@isChecked
            isMultiSelect=@isMultiSelect
          )
          Radio=(component
            'cut/filter-bar/filter/radio' radio=DD.Radio filters=@filters
          )
          Generic=(component
            'cut/filter-bar/filter/generic' generic=DD.Generic filters=@filters
          )
          CopyItem=DD.CopyItem
          Description=DD.Description
          Interactive=DD.Interactive
          Separator=DD.Separator
          Title=DD.Title
        )
      }}
    </Dropdown>
  {{/let}}
{{else}}
  <Hds::Dropdown
    @listPosition={{if @listPosition @listPosition 'bottom-right'}}
    ...attributes
    as |DD|
  >
    {{yield
      (hash
        ToggleButton=(component DD.ToggleButton color='secondary')
        Checkbox=(component
          'cut/filter-bar/filter/checkbox'
          checkbox=DD.Checkbox
          filters=@filters
          name=@name
          toggle=@toggle
          softToggle=@softToggle
          applyFilter=@applyFilter
          isChecked=@isChecked
        )
        Checkmark=(component
          'cut/filter-bar/filter/checkmark'
          checkmark=DD.Checkmark
          filters=@filters
          name=@name
          toggle=@toggle
          softToggle=@softToggle
          applyFilter=@applyFilter
          isChecked=@isChecked
        )
        Radio=(component
          'cut/filter-bar/filter/radio' radio=DD.Radio filters=@filters
        )
        Generic=(component
          'cut/filter-bar/filter/generic' generic=DD.Generic filters=@filters
        )
        CopyItem=DD.CopyItem
        Description=DD.Description
        Interactive=DD.Interactive
        Separator=DD.Separator
        Title=DD.Title
      )
    }}
  </Hds::Dropdown>
{{/if}}